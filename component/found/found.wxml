<!--component/found/found.wxml-->
<view class="found">
	<view class="found-item">
		<view class="found-item-content">
			<view class="found-item-content-title">
				<view
				 bindtap="changeColor"
				 class="icon"
				 style="{{allFound.signIcon}}"
				>{{allFound.sign}}
				</view>
				<text class="found-item-title">{{allFound.title}}</text>
			</view>
			<view class="found-item-authorTime">
				<view class="found-item-author">{{allFound.author}}</view>
				<view class="found-item-time">{{allFound.time}}</view>
			</view>
		</view>
		<view class="found-item-pic">
			<image class="pic" src="{{allFound.img}}" />
			<view class="seeTime" style="{{allFound.seeTime}}">
				<image class="flame" src="../../image/flame.png" />
				<text class="found-item-seeTimes">{{allFound.flameTime}}</text>
			</view>
		</view>
	</view>
</view>

