/* pages/rent/rent.wxss */
page{
    background-color:#F8F8F9;
}
.img{
    width: 100%;
    height: 200rpx;
}
.top{
    height: 250rpx;
    width: 680rpx;
    background-color: #fff;
    margin: 20rpx 30rpx;
    border: #F1F1F2 2px solid;
}
.top-title{
    margin-top: 30rpx;
    padding-bottom: 30rpx;
    position: relative;
}
p.text1{
    font-weight: bold;
    padding-left: 30rpx;
}
p.text2{
    font-size: 20rpx;
    color: #101D37;
    display: inline-block;
    right: 30rpx;
    position: absolute;
}
.top-info{
    text-align: center;
    margin: 0 auto;

}
p.text3{
    font-size: 28rpx;
}
.top-button{
    height: 50rpx;
    text-align: center;
    align-items: center;
    border: solid 1px #EDEDED;
    margin: 20rpx;
}
p.text4{
    font-size: 25rpx;
    line-height: 50rpx;
    color: #666666;
}
.bottom{
    height: 250rpx;
    width: 680rpx;
    background-color: #fff;
    margin: 30rpx 30rpx;
    border: #F1F1F2 2px solid;
    position: relative;
}
p.text5{
    position: absolute;
    left: 20rpx;
    top: 20rpx;
}
.bottom_infos{
    display: flex;
    text-align: center;
    margin-top: 50rpx;
    padding-top: 30rpx;
}
.info_left{
    flex: 1;
}
.info_middle{
    flex: 1;
}
.info_right{
    flex: 1;
}
.img1{
    width: 50rpx;
    height: 50rpx;
}
p.text6{
    display: block;
    font-size: 25rpx;
}
