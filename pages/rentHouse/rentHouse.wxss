.van-search{
    background-color: #fff;
    box-shadow:3px 3px 10px gray;
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 5px;
}
.body-first{
    margin-top: 40rpx;
}
.body-first_contentFirst{
    display: flex;
    text-align: center;
}
.body-first_content{
    flex: 1;
}
.body-first_icon{
    width: 80rpx;
    height: 80rpx;
}
.body-first_text{
    font-size: 28rpx;
}
.body-first_contentSecond{
    display: flex;
    text-align: center;
    margin-top: 30rpx;
}
.body-second{
    margin-top: 50rpx;
    display: flex;
}
.body-second_content{
    border: solid 1px #E1E1E1;
    border-radius: 5px;
    text-align: center;
    align-items: center;
    margin-left: 20rpx;
}
.body-second_text{
    font-size: 30rpx;
    margin: 15rpx 50rpx 5rpx 20rpx;
}
.body-second_text1{
    display: block;
    font-size: 25rpx;
    margin-bottom: 20rpx;
}
.body-third{
    display: flex;
    text-align: center;
    border-bottom: 1px solid #E1E1E1;
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.body-third_text{
    display: flex;
    flex: 1;
}
.body-third_info{
    margin-bottom: 35rpx;
}
.body-third_icon{
    width: 50rpx;
    height: 50rpx;
}
.body-third_icon1{
    width: 40rpx;
    height: 40rpx;
    padding-left: 60rpx;
}
.body-fourth{margin: 0;padding: 0;}
.body-fourth_content{
    display: flex;
    margin: 20rpx 30rpx 0 30rpx;
    position: relative;
}
.body-fourth_image{
    width: 210rpx;
    height: 170rpx;
}
.body-fourth_contentRight{
    margin-left: 30rpx;
}
.body-fourth_Title{
    font-weight: 600;
}
.body-fourth_Detail{
    font-size: 25rpx;
}
.body-fourth_desc{
    font-size: 28rpx;
    background-color:#EDF0F3;
    color: #849AAE;
    border: solid 1px #EDF0F3;
    display: inline-block;
    text-align: center;
}
.body-fourth_price{
    color: #FA5741;
    font-size: 39rpx;
    font-weight: bold;
    align-items: center;
}
span{
    font-size: 15rpx;
}
text.data{
    font-size: 23rpx;
}
.body-fourth_icon{
    width: 40rpx;
    height: 40rpx;
}
.body-fourth_footer{
    position: absolute;
    right: 0;
    bottom: 0;
}

