.header{
    width: 100%;
    height: 180rpx;
    background-color: #F8F8F8;
    text-align: center;
}
.text1{
    font-weight: bold;
    padding-top: 40rpx;
}
.text2{
    padding-top: 15rpx;
    font-size: 28rpx;
    color: #C2C2C2;
}
.content{
    /* margin-top: 30rpx; */
    margin-left: 30rpx;
}
.content_desc{
    width: 100% ;
    height: 100rpx;
    text-align: justify;
    display: flex;
    position: relative;
    align-items: center;
    border-bottom: 2px solid #f4f4f4;
}
.content_city{
    font-weight: bold;
}
.content_info{
    margin-left: 30rpx;
}
.img_arrow{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-top: -10rpx;
}
.content_info__entry{
    color: #C2C2C2;
    font-size: 30rpx;
    margin-left: 30rpx;
}
.content_info__choose{
    color: #C2C2C2;
    font-size: 30rpx;
    margin-left: 95rpx;
}
.footer{
    height: 100rpx;
    width: 700rpx;
    border-radius: 10rpx;
    background-color: #ACC6FB;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    margin: 0 auto;
    margin-top: 40rpx;
}