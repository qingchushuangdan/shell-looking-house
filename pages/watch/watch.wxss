.viewWrap {
    padding: 0 25rpx;
    /* border: 1px solid #000; */
}

.view-tab {
    width: 94%;
    /* border: 1px solid #000; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    background-color: #fff;
    z-index: 2;
}

.swiper-tab {
    display: flex;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #000;
}

.swiper-tab .swiper-tab-item {
    width: 125rpx;
    /* border: 1px solid #000; */
    text-align: left;
    font-family: '微软雅黑';
    font-weight: bold;
}

.swiper-tab .active {
    font-size: 40rpx;
    font-weight: bolder;
}

/* 控制底部边框长度 */
.swiper-tab .active::after {
    content: '';
    position: absolute;
    /* top: auto; */
    margin-left: -60rpx;
    margin-top: 76rpx;
    width: 40rpx;
    height: 4rpx;
    background-color: #3300cc;
}

.view-search .img {
    width: 30rpx;
    height: 30rpx;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.content{
    /* border: 1px solid #000; */
    padding-top: 80rpx;
    z-index: 1;
}

