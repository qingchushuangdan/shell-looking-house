/* pages/watch/watch.wxss */
.viewWrap {
    padding: 0 25rpx;
    /* border: 1px solid #000; */
}

.view-tab {
    width: 94%;
    /* border: 1px solid #000; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    background-color: #fff;
    z-index: 2;
}

.swiper-tab {
    display: flex;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #000;
}

.swiper-tab .swiper-tab-item {
    width: 125rpx;
    /* border: 1px solid #000; */
    text-align: left;
    font-family: '微软雅黑';
    font-weight: bold;
}

.active {
    font-size: 40rpx;
    font-weight: bolder;
}

/* 控制底部边框长度 */
.active::after {
    content: '';
    position: absolute;
    /* top: auto; */
    margin-left: -60rpx;
    margin-top: 76rpx;
    width: 40rpx;
    height: 4rpx;
    background-color: #3300cc;
}

.view-search .img {
    width: 30rpx;
    height: 30rpx;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.content{
    /* border: 1px solid #000; */
    padding-top: 80rpx;
    z-index: 1;
}

.found {
    padding: 20rpx 0;
    border-bottom: 1px solid #ccc;
}

.found .found-item {
    display: flex;
    justify-content: space-between;
}

.found-item-content{
    margin-right: 40rpx;
    position: relative;
}

.found-item-content-title .icon {
    height: 30rpx;
    width: 60rpx;
    font-size: 24rpx;
    background-color: #0066ff;
    color: #ffffff;
    font-weight: bold;
    margin-right: 15rpx;
    display: inline-block;
    padding: 5rpx;
    line-height: 30rpx;
    text-align: center;
}

.found-item-content-title .found-item-title{
    font-weight: bold;
    margin-bottom: 25rpx;
}

.found-item-authorTime {
    font-size: 28rpx;
    font-family: '微软雅黑';
    position: absolute;
    bottom: 0;
}

.found-item-authorTime .found-item-author{
    margin-right: 40rpx;
    display: inline-block;
}

.found-item-authorTime .found-item-time {
    display: inline-block;
}

.found-item-pic .pic {
    width: 250rpx;
    height: 200rpx;
    background-size: contain;
    overflow: hidden;
    z-index: 1;
}

.seeTime {
    height: 40rpx;
    width: 120rpx;
    border-radius: 20rpx;
    background-color: #444444;
    margin-top: -60rpx;
    margin-left: 120rpx;
    z-index: 2;
    opacity: 0.6;
}

.seeTime .flame {
    height: 30rpx;
    width: 30rpx;
    margin: auto 10rpx;
}

.seeTime .found-item-seeTimes {
    color: #ffffff;
    position: absolute;
    font-size: 24rpx;
    text-align: center;
}

.end {
    height: 60rpx;
    /* border: 1px solid #000; */
    text-align: center;
    font-size: 24rpx;
}