<!--pages/watch/watch.wxml-->
<view class="viewWrap">
	<!-- 导航栏 -->
	<view class="view-tab">
		<view class="swiper-tab">
			<view
			 class="swiper-tab-item {{currentTab==0?'active':''}}"
			 data-current="0"
			 bindtap="clickTab"
			>好房
			</view>
			<view
			 class="swiper-tab-item {{currentTab==1?'active':''}}"
			 data-current="1"
			 bindtap="clickTab"
			>发现
			</view>
			<view
			 class="swiper-tab-item {{currentTab==2?'active':''}}"
			 data-current="2"
			 bindtap="clickTab"
			>行情
			</view>
			<view
			 class="swiper-tab-item {{currentTab==3?'active':''}}"
			 data-current="3"
			 bindtap="clickTab"
			>踩盘
			</view>
		</view>
		<view class="view-search">
			<image class="img" src="../../image/view-search.png" />
		</view>
	</view>
	<!-- 切换对应的内容 -->
	<swiper
	 current="{{currentTab}}"
	 duration="300"
	 bindchange="swiperTab"
	>
		<swiper-item>
			<view>
				text0
			</view>
		</swiper-item>
		<swiper-item>
			<view class="found">
				<view class="found-item">
					<view class="found-item-content">
						<view class="found-item-title">不看不知道！装修 “门”！！居然这么有讲究！</view>
						<view class="found-item-authorTime">
							<view class="found-item-author">家居严选师</view>
							<view class="found-item-time">一天前</view>

						</view>
					</view>
					<view class="found-item-pic">
						<image class="pic" src="../../image/view-search.png" />
					</view>
					<view class="found-item-seeTimes">9889</view>
				</view>
			</view>
		</swiper-item>
		<swiper-item>
			<view>
				text2
			</view>
		</swiper-item>
		<swiper-item>
			<view>
				text3
			</view>
		</swiper-item>
	</swiper>
</view>

