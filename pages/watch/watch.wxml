<!--pages/watch/watch.wxml-->
<view class="viewWrap">
	<!-- 导航栏 -->
	<view class="view-tab">
		<view class="swiper-tab">
			<view
			 class="swiper-tab-item {{currentTab==0?'active':''}}"
			 data-current="0"
			 bindtap="clickTab"
			>好房
			</view>
			<view
			 class="swiper-tab-item {{currentTab==1?'active':''}}"
			 data-current="1"
			 bindtap="clickTab"
			>发现
			</view>
			<view
			 class="swiper-tab-item {{currentTab==2?'active':''}}"
			 data-current="2"
			 bindtap="clickTab"
			>行情
			</view>
			<view
			 class="swiper-tab-item {{currentTab==3?'active':''}}"
			 data-current="3"
			 bindtap="clickTab"
			>踩盘
			</view>
		</view>
		<view class="view-search">
			<image class="img" src="../../image/view-search.png" />
		</view>
	</view>
	<!-- 切换对应的内容 -->
	<swiper
	 current="{{currentTab}}"
	 duration="300"
	 bindchange="swiperTab"
	 style="height:{{height}}rpx"
	>
		<swiper-item>
			<view>
				text0
			</view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="true" style="height:{{height}}rpx">
				<view
				 class="found"
				 wx:for="{{allFound}}"
				 wx:key="index"
				>
					<view class="found-item">
						<view class="found-item-content">
							<view class="found-item-content-title">
								<view
								 class="icon"
								 style="background-color:{{signIcon}}"
								 bindtap="changeColor"
								>{{item.sign}}
								</view>
								<text class="found-item-title">{{item.title}}</text>
							</view>
							<view class="found-item-authorTime">
								<view class="found-item-author">{{item.author}}</view>
								<view class="found-item-time">{{item.time}}</view>
							</view>
						</view>
						<view class="found-item-pic">
							<image class="pic" src="{{item.img}}" />
							<view class="seeTime">
								<image class="flame" src="../../image/flame.png" />
								<text class="found-item-seeTimes">{{item.flameTime}}</text>
							</view>
						</view>
					</view>
				</view>
			</scroll-view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="true" style="height:{{height}}rpx">
				<view
				 class="found"
				 wx:for="{{allFound}}"
				 wx:key="index"
				>
					<view class="found-item">
						<view class="found-item-content">
							<view class="found-item-content-title">
								<view
								 class="icon"
								 style="background-color:{{signIcon}}"
								 bindtap="changeColor"
								>{{item.sign}}
								</view>
								<text class="found-item-title">{{item.title}}</text>
							</view>
							<view class="found-item-authorTime">
								<view class="found-item-author">{{item.author}}</view>
								<view class="found-item-time">{{item.time}}</view>
							</view>
						</view>
						<view class="found-item-pic">
							<image class="pic" src="{{item.img}}" />
							<view class="seeTime">
								<image class="flame" src="../../image/flame.png" />
								<text class="found-item-seeTimes">{{item.flameTime}}</text>
							</view>
						</view>
					</view>
				</view>
			</scroll-view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="true" style="height:{{height}}rpx">
				<view
				 class="found"
				 wx:for="{{allFound}}"
				 wx:key="index"
				>
					<view class="found-item">
						<view class="found-item-content">
							<view class="found-item-content-title">
								<view
								 class="icon"
								 style="background-color:{{signIcon}}"
								 bindtap="changeColor"
								>{{item.sign}}
								</view>
								<text class="found-item-title">{{item.title}}</text>
							</view>
							<view class="found-item-authorTime">
								<view class="found-item-author">{{item.author}}</view>
								<view class="found-item-time">{{item.time}}</view>
							</view>
						</view>
						<view class="found-item-pic">
							<image class="pic" src="{{item.img}}" />
							<view class="seeTime">
								<image class="flame" src="../../image/flame.png" />
								<text class="found-item-seeTimes">{{item.flameTime}}</text>
							</view>
						</view>
					</view>
				</view>
			</scroll-view>
		</swiper-item>
	</swiper>
</view>

