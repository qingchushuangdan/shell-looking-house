<!--pages/watch/watch.wxml-->
<view class="viewWrap">
	<!-- 导航栏 -->
	<view class="view-tab">
		<view class="swiper-tab">
			<view
			 class="swiper-tab-item {{currentTab==0?'active':''}}"
			 data-current="0"
			 bindtap="clickTab"
			>好房
			</view>
			<view
			 class="swiper-tab-item {{currentTab==1?'active':''}}"
			 data-current="1"
			 bindtap="clickTab"
			>发现
			</view>
			<view
			 class="swiper-tab-item {{currentTab==2?'active':''}}"
			 data-current="2"
			 bindtap="clickTab"
			>行情
			</view>
			<view
			 class="swiper-tab-item {{currentTab==3?'active':''}}"
			 data-current="3"
			 bindtap="clickTab"
			>踩盘
			</view>
		</view>
		<view class="view-search">
			<image class="img" src="../../image/view-search.png" />
		</view>
	</view>
	<!-- 切换对应的内容 -->
	<swiper
	 class="content"
	 current="{{currentTab}}"
	 duration="300"
	 bindchange="swiperTab"
	 style="height:{{height}}rpx"
	>
		<swiper-item>
			<view>
				text0
			</view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="true" style="height:{{height}}rpx">
				<found
				 wx:for="{{allFound}}"
				 wx:key="index"
				 allFound="{{item}}"
				></found>
				<view class="end">没有更多数据了~</view>
			</scroll-view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="true" style="height:{{height}}rpx">
				<quotation
				 wx:for="{{quotation}}"
				 wx:key="index"
				 quotation="{{item}}"
				></quotation>
				<view class="end">没有更多数据了~</view>
			</scroll-view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="true" style="height:{{height}}rpx">
				<plate
				 wx:for="{{plate}}"
				 wx:key="index"
				 plate="{{item}}"
				></plate>
				<view class="end">没有更多数据了~</view>
			</scroll-view>
		</swiper-item>
	</swiper>
</view>

